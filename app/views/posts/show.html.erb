<section class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        Josh Echeverri
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url, class: "img-fluid" %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center">
      <%= link_to "Go Back", posts_path %>
    </div>
  </div>
</section>
